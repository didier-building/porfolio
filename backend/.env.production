# Production Environment Configuration
# Copy this to .env and update with your production values

# Django Configuration
SECRET_KEY=your-production-secret-key-here-make-it-long-and-random
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-app.vercel.app

# Database Configuration (Production)
# Option 1: PostgreSQL (Recommended for production)
DATABASE_URL=postgresql://username:password@host:port/database_name

# Option 2: SQLite (for simple deployments)
# DATABASE_URL=sqlite:///db.sqlite3

# AI Configuration
GOOGLE_GEMINI_API_KEY=your-production-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-flash

# CORS Configuration (Frontend URLs)
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://your-app.vercel.app
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://your-app.vercel.app

# Email Configuration (for contact forms)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Static Files (for production)
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles/
MEDIA_URL=/media/
MEDIA_ROOT=/app/media/

# Cloud Storage (Optional - for AWS S3)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# USE_S3=True

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO

# Analytics & Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Performance
USE_GZIP=True
USE_ETAGS=True
